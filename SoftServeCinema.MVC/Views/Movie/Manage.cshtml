@model IEnumerable<SoftServeCinema.Core.DTOs.Movies.MovieDTO>

@{
    ViewData["Title"] = "Управління фільмами";
    ViewData["PaginatorAction"] = "Manage";
    Layout = "_StockLayout";
}
<div class="manage__container">
<h1 class="text-center">Фільми</h1>
    <div class="row mt-3">
        <div class="col-1 ">
            <a asp-action="Admin" class="btn btn-secondary w-100">
                <i class="fa-solid fa-arrow-left"></i>
            </a>
        </div>
    </div>
<div class="mt-3">
        <a asp-action="Create" class="btn btn-primary mb-3">
            <i class="bi bi-plus"></i> Додати
        </a>
</div>


@await Html.PartialAsync("_Paginator", Model)

<table class="table my-5">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Назва</th>
            <th scope="col">Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <th class="align-middle" scope="row">@movie.Id</th>
                <td class="align-middle">@movie.Title</td>
                <td class="align-middle">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-warning">
                            <i class="bi bi-pencil-fill"></i> Редагувати
                        </a>
                        <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Видалити
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("_Paginator", Model)
</div>s