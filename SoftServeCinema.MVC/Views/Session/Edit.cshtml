@model SoftServeCinema.Core.DTOs.Sessions.SessionDTO

@{
    ViewData["Title"] = "Додати сеанс";
    Layout = "_StockLayout";
}
<div class="manage__container">
<h1 class="text-center">Новий сеанс</h1>
<hr />

<form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3">
        <div class="row mt-3">
            <div class="col-1 ">
                <a asp-action="Manage" class="btn btn-secondary w-100">
                    <i class="fa-solid fa-arrow-left"></i>
                </a>
            </div>
        </div>
    <div class="row mt-3">
    <div class="col-3">
        <label asp-for="MovieId" class="control-label">Фільм</label>
        <select asp-for="MovieId" asp-items="@(ViewBag.Movies)" multiple class="form-control"></select>
        <span asp-validation-for="MovieId" class="text-danger"></span>
    </div>
        </div>
            <div class="row mt-3">
    <div class="col-3">
        <label asp-for="StartDate" class="form-label">Дата сеансу</label>
        <input asp-for="StartDate" class="form-control">
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
            </div>
                <div class="row mt-3">
    <div class="col-3">
        <label asp-for="BasicPrice" class="form-label">Ціна</label>
        <input asp-for="BasicPrice" class="form-control">
        <span asp-validation-for="BasicPrice" class="text-danger"></span>
    </div>
                </div>
                    <div class="row mt-3">
    <div class="col-3">
        <label asp-for="VipPrice" class="form-label">Ціна[VIP]</label>
        <input asp-for="VipPrice" class="form-control">
        <span asp-validation-for="VipPrice" class="text-danger"></span>
    </div>
                    </div>
                       
                            <div class="row mt-3">
    <div class="col-3">
        <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-plus"></i> Оновити
        </button>
    </div>
    </div>
</form>
</div>
