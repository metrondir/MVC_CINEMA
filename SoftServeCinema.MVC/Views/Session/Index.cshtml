@model IEnumerable<SoftServeCinema.Core.DTOs.Sessions.SessionViewModelDTO>

@{
    ViewData["Title"] = "Сеанси";
    ViewData["PaginatorAction"] = "Index";
}

<div>
    <h3 class="text-center my-4">Сеанси</h3>

    @await Html.PartialAsync("_Paginator", Model)
    <div class="list-group my-4">
        <div class="row justify-content-between">
            @foreach (var session in Model)
            {
                <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@session.MovieTitle</h5>
                            <p class="card-text">
                                <span>Дата сеансу: @session.StartDate.ToString("d MMMM yyyy 'р.' HH:mm")</span><br>
                                <span>Кількість вільних місць: @session.TicketsCount</span>
                            </p>
                            <a class="btn btn-primary" asp-route-id="@session.Id" asp-controller="Session" asp-action="Details">Детальніше</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@await Html.PartialAsync("_Paginator", Model)
