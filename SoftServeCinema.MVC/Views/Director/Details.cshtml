@model SoftServeCinema.Core.DTOs.Directors.DirectorWithMoviesDTO

@{
    ViewData["Title"] = "Режисер: " + Model.Name;
}

<div>
    <h3 class="text-center my-4 text-white">Фільми режисера  @Model.Name</h3>

    <div class="list-group my-4">
        <div class="row justify-content-between">
            @if (Model.Movies.Count() == 0)
            {
                <h5>Не знайдено</h5>
            }
            @foreach (var movie in Model.Movies)
            {
                @await Html.PartialAsync("Movies/_MovieCard", movie)
            }
        </div>
    </div>
</div>