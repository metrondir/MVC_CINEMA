@model IEnumerable<SoftServeCinema.Core.DTOs.Genres.GenreDTO>

@{
    ViewData["Title"] = "Управління жанрами";
    ViewData["PaginatorAction"] = "Manage";
    Layout = "_StockLayout";
}
<div class="manage__container">
    <h1 class="text-center">Жанри</h1>
    <hr />
    <div class="row mt-3">
        <div class="col-1 ">
            <a asp-action="Admin" class="btn btn-secondary w-100">
                <i class="fa-solid fa-arrow-left"></i>
            </a>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Create" class="btn btn-primary mb-3">
            <i class="bi bi-plus"></i> Додати
        </a>
    </div>
    

    @await Html.PartialAsync("_Paginator", Model)

    <table class="table my-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Назва</th>
                <th scope="col">Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genre in Model)
            {
                <tr>
                    <th class="align-middle" scope="row">@genre.Id</th>
                    <td class="align-middle">@genre.Name</td>
                    <td class="align-middle">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@genre.Id" class="btn btn-warning">
                                <i class="bi bi-pencil-fill"></i> Редагувати
                            </a>
                            <a asp-action="Delete" asp-route-id="@genre.Id" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Видалити
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row mt-3">
        @await Html.PartialAsync("_Paginator", Model)
    </div>
    
</div>

