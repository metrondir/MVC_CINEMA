@model SoftServeCinema.Core.DTOs.Genres.GenreDTO

@{
    ViewData["Title"] = "Додати жанр";
    Layout = "_StockLayout";
}
<div class="manage__container">
    <h1 class="text-center">Новий жанр</h1>
    <hr />

    <form asp-action="Create" method="post" class="row g-3 text-center">
        <div class="row mt-3">
            <div class="col-1 ">
                <a asp-action="Manage" class="btn btn-secondary w-100">
                    <i class="fa-solid fa-arrow-left"></i>
                </a>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-3">
                <label asp-for="Name" class="form-label text-lg-center">Назва</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-plus"></i> Додати
                </button>
            </div>
        </div>
    </form>

</div>