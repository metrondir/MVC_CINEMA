@model SoftServeCinema.Core.DTOs.Actors.ActorDTO

@{
    ViewData["Title"] = "Редагувати актора " + Model.Name;
    Layout = "_StockLayout";
}
<div class="manage__container">

<h1 class="text-center">Редагувати актора</h1>
<hr />

<form asp-action="Edit" method="post" class="row g-3">
        <div class="row mt-3">
            <div class="col-1 ">
                <a asp-action="Manage" class="btn btn-secondary w-100">
                    <i class="fa-solid fa-arrow-left"></i>
                </a>
            </div>
        </div>
        <div class="row mt-3">
    <div class="col-3">
        <label asp-for="Name" class="form-label">Ім'я Прізвище</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
        </div>
        <div class="row mt-3">
    <div class="col-3">
        <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-pencil"></i> Оновити
        </button>
    </div>
        </div>
</form>
</div>