@model SoftServeCinema.Core.DTOs.Actors.ActorDTO

@{
    ViewData["Title"] = "Додати актора";
}

<h1 class="text-center">Новий актор</h1>
<hr />

<form asp-action="Create" method="post" class="row g-3">
    <div class="col-12">
        <label asp-for="Name" class="form-label">Ім'я Прізвище</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
   
    <div class="col-6">
        <a asp-action="Manage" class="btn btn-secondary w-100">
            <i class="bi bi-arrow-left"></i> Назад
        </a>
    </div>
    <div class="col-6">
        <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-plus"></i> Додати
        </button>
    </div>
</form>